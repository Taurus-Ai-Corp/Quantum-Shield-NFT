# Quantum-Shield-NFT Frontend Environment Variables
# Copy this file to .env.local for local development
# Set these as Vercel Environment Variables for production

# =============================================================================
# Next.js Configuration
# =============================================================================
NEXT_PUBLIC_APP_NAME="Quantum Shield NFT"
NEXT_PUBLIC_APP_URL="https://quantum-shield-nft.vercel.app"

# =============================================================================
# API Configuration
# =============================================================================
# Backend API URL (Fastify server)
NEXT_PUBLIC_API_URL="http://localhost:3200"

# =============================================================================
# Hedera Configuration
# =============================================================================
# Network: testnet, mainnet, previewnet
NEXT_PUBLIC_HEDERA_NETWORK="testnet"

# Optional: HashConnect metadata
NEXT_PUBLIC_HASHCONNECT_APP_NAME="Quantum Shield NFT"
NEXT_PUBLIC_HASHCONNECT_APP_DESCRIPTION="Quantum-Safe NFT Protection Platform"
NEXT_PUBLIC_HASHCONNECT_ICON_URL="https://quantum-shield-nft.vercel.app/logo.png"

# =============================================================================
# NextAuth.js Configuration
# =============================================================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# =============================================================================
# Optional: Analytics & Monitoring
# =============================================================================
# Vercel Analytics (automatically enabled on Vercel)
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=""

# PostHog (optional)
# NEXT_PUBLIC_POSTHOG_KEY=""
# NEXT_PUBLIC_POSTHOG_HOST=""

# Sentry (optional)
# NEXT_PUBLIC_SENTRY_DSN=""
# SENTRY_AUTH_TOKEN=""

# =============================================================================
# Feature Flags
# =============================================================================
NEXT_PUBLIC_ENABLE_IPFS="true"
NEXT_PUBLIC_ENABLE_PINECONE="false"
NEXT_PUBLIC_ENABLE_MARKETPLACE="false"

# =============================================================================
# Development
# =============================================================================
# Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED="1"
