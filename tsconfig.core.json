{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist/core",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "types": ["node"]
  },
  "include": [
    "src/types/**/*.ts",
    "src/quantum-crypto/**/*.ts",
    "src/hedera/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
